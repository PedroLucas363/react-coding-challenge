{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "plugin:@typescript-eslint/recommended",
        "airbnb-typescript",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "project": "./tsconfig.json", // Used by "airbnb-typescript" extension
        "sourceType": "module"
      },
    "plugins": [
        "react", "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/explicit-module-boundary-types": "off", // TypeScript's type inference takes care of this
        "import/no-extraneous-dependencies": [
          "error"
        ],
        "import/prefer-default-export": "off",
        "no-console": ["error"],
        "no-underscore-dangle": "off",
        "react/display-name": "off",
        "react/function-component-definition": [2, { "namedComponents": "function-declaration" }],
        "react/jsx-filename-extension": [1, { "extensions": [".jsx", ".test.js", ".tsx", ".test.ts"] }],
        "react/require-default-props": "off"
    }
}
